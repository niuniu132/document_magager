<h2>编辑文档</h2>
<%= simple_form_for @document do |f| %>
<div class="form-inputs">
  <%= f.input :file_name, label: "文件名", required: true %>
  <%= f.input :file_type, label: "文件分类", required: true, autofocus: true %>
  <%= f.input :file, label: "上传文件", required: true %>
</div>
<%= f.submit '提交', data: { disable_with: "提交中..."}  %>

<% end %>
