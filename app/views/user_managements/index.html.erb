<h2>用户列表</h2>
<%= link_to('新建用户', new_user_management_path , class: 'btn btn-primary btn-lg pull-right')%>
<br>
<br>
<table class='table table-bordered admin_user_manage_table'>
<thead>
  <tr>
  <td>用户名</td>
  <td>创建时间</td>
  <td>修改用户名</td>

  <td>删除用户</td>
  <tr>
</thead>
<% @users.each do |user| %>
<tr>
  <td><%= user.username %></td>
  <td><%= user.created_at%></td>
  <td><%= link_to('修改用户名密码', edit_user_management_path(user))%></td>

  <td><%= link_to('删除用户', user_management_path(user), :method => :delete, :data => { :confirm => "确定删除?" })%></td>
</tr>
<% end %>
</table>
